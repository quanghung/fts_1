<h1>All Exam</h1>

  <%= link_to "Add Exam",#,
    class: "btn btn-medium btn-primary" %>


<%= render "shared/flash_messages" %>
<div class="row">
    <div class="span6 offset1">
      <table style="text-align: center" border="1">      
        <thead>
          <tr>
            <th>STT :</th>
            <th>Name Exam :</th>
            <th>Subject :</th>
            <th>Action :</th>
            <th>Add Users :</th>
          </tr>
        </thead>
        <tbody>
          <% @exams.each do |exam| %>
          <tr>
            <td><%= exam.id %></td>
            <td><%= exam.name %></td>
            <td> <%= link_to  exam.subject.name, '#' %></td>
            <td>
                <%= link_to "edit", '#' %>
                <%= link_to "delete", '#',
                      method: :delete, confirm: "Are you sure?",
                      title: "Delete #{exam.name}", class: "link-danger"  %>
            </td>
             <td>
                <%= link_to "Show Users", '#' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
<%= will_paginate %>